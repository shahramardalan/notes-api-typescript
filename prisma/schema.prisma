generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}


model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  notes     Note[]
  createdAt DateTime @default(now())
}
